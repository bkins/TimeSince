<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeSince.MainPage">

    <StackLayout Margin="5, 0, 5, 0">

           <Label x:Name="ElapsedTimeLabel"
                  FontSize="Medium"
                  TextColor="{StaticResource Primary}"
                  BackgroundColor="LightGray"
                  HorizontalTextAlignment="Center"
                  Margin="-5, 0, -5, 0"/>

        <BoxView HeightRequest="1" Color="Gray" Margin="0, 5, 0, 15"/>

        <Editor x:Name="BeginningDateNameEditor"
                Placeholder="Name"
                Margin="-5, 0, 0, 0"/>
        <Label x:Name="BeginningDateLabel"
               Text="Beginning Date:"/>
        <DatePicker x:Name="BeginningDatePicker"
                    Margin="5, 0, 0, 0"/>

        <Label x:Name="BeginningTimeLabel"
               Text="Beginning Time:"/>
        <TimePicker x:Name="BeginningTimePicker"
                    Margin="5, 0, 0, 0"/>
       <Button x:Name="SaveButton"
               Text="Save"
               FontAttributes="Bold"
               Clicked="SaveButton_OnClicked"/>
    </StackLayout>

</ContentPage>
